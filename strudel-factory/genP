#!/bin/bash

# Strudel Pattern Generator Wrapper
# Usage: ./genP "dark techno with polyrhythms"

if [ $# -eq 0 ]; then
    echo "Usage: ./genP \"pattern description\""
    echo "Example: ./genP \"dark techno with polyrhythms and acid bass\""
    exit 1
fi

# Combine all arguments into single prompt
prompt="$*"

echo "ðŸŽµ Generating Strudel pattern for: $prompt"
echo "---"

# Call Claude with the prompt and bypass permissions
claude -p "ultrathink generate complete strudel pattern for: $prompt" --permission-mode bypassPermissions