#!/bin/bash

# Suno Style Prompt Generator Wrapper
# Usage: ./generate_style "dark industrial techno"

if [ $# -eq 0 ]; then
    echo "Usage: ./generate_style \"genre description\""
    echo "Example: ./generate_style \"dark industrial techno\""
    exit 1
fi

# Combine all arguments into single prompt
prompt="$*"

echo "ðŸŽµ Generating Suno style prompt for: $prompt"
echo "---"

# Call Claude with the prompt and bypass permissions
claude -p "ultrathink generate style prompt for: $prompt" --permission-mode bypassPermissions
